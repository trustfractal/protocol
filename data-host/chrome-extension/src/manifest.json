{
    "manifest_version": 2,
    "name": "Fractal Data Host",
    "options_page": "options.html",
    "background": {
        "scripts": [
            "background.bundle.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Fractal Wallet",
        "default_popup": "popup.html",
        "default_icon": "icon-34.png"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "icons": {
        "128": "icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "<all_urls>"
            ],
            "js": [
                "contentScript.bundle.js"
            ]
        }
    ],
    "devtools_page": "devtools.html",
    "content_security_policy": "script-src 'self' 'wasm-eval' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "content.styles.css",
        "icon-128.png",
        "icon-34.png"
    ],
    "permissions": [
        "tabs",
        "storage",
        "unlimitedStorage"
    ]
}

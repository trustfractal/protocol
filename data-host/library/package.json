{
    "name": "@trustfractal/data-host",
    "version": "1.0.7",
    "description": "Javascript library for data providers using fractal protocol",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "repository": "https://github.com/trustfractal/protocol/tree/master/support/@trustfractal/data-host",
    "license": "MIT",
    "keywords": [],
    "scripts": {
        "build": "npx webpack --config webpack.config.js --mode=development",
        "build:dev": "npx webpack --config webpack.config.js --watch --progress --mode=development",
        "build:prod": "npx webpack --config webpack.config.js --mode=production",
        "fix": "run-s fix:*",
        "fix:prettier": "prettier \"src/**/*.(ts|tsx)\" --write",
        "fix:lint": "eslint src --ext .ts,.tsx --fix",
        "test": "run-s build test:*",
        "test:lint": "eslint src --ext .ts",
        "test:prettier": "prettier \"src/**/*.ts\" --list-different",
        "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
        "test:unit": "jest --coverage",
        "check-cli": "run-s test diff-integration-tests check-integration-tests",
        "check-integration-tests": "run-s check-integration-test:*",
        "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
        "watch:build": "tsc -p tsconfig.json -w",
        "watch:test": "jest --coverage --silent --watch",
        "cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
        "cov:html": "nyc report --reporter=html",
        "cov:lcov": "nyc report --reporter=lcov",
        "cov:send": "run-s cov:lcov && codecov",
        "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
        "doc": "run-s doc:html && open-cli build/docs/index.html",
        "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
        "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
        "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
        "version": "standard-version",
        "reset-hard": "git clean -dfx && git reset --hard && yarn",
        "prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish"
    },
    "engines": {
        "node": ">=10"
    },
    "dependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.16.8",
        "@hot-loader/react-dom": "^17.0.1",
        "@polkadot/api": "^6.8.1",
        "@polkadot/keyring": "^8.1.2",
        "@polkadot/util": "^8.1.2",
        "@polkadot/util-crypto": "^8.1.2",
        "@trustfractal/polkadot-utils": "^0.1.7",
        "@types/chrome": "^0.0.134",
        "@types/node": "^16.11.7",
        "@types/react": "^17.0.34",
        "@types/react-dom": "^17.0.11",
        "@types/styled-components": "^5.1.15",
        "clean-webpack-plugin": "^4.0.0",
        "crypto-browserify": "^3.12.0",
        "numeral": "^2.0.6",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^6.2.1",
        "react-spinners": "^0.11.0",
        "react-tooltip": "^4.2.21",
        "rxjs": "^7.4.0",
        "styled-components": "^5.3.3"
    },
    "devDependencies": {
        "@svgr/webpack": "^6.0.0",
        "@testing-library/jest-dom": "^5.16.1",
        "@types/enzyme": "^3.10.11",
        "@types/jest": "^27.4.0",
        "@types/numeral": "^2.0.2",
        "@types/react-router": "^5.1.17",
        "@types/react-router-dom": "^5.3.2",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "codecov": "^3.5.0",
        "cspell": "^4.1.0",
        "cz-conventional-changelog": "^3.3.0",
        "enzyme": "^3.11.0",
        "eslint": "^8.3.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-functional": "^4.0.2",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-react": "^7.28.0",
        "gh-pages": "^3.1.0",
        "jest": "^27.4.7",
        "jest-chrome": "^0.7.2",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "open-cli": "^6.0.1",
        "prettier": "^2.5.0",
        "react-test-renderer": "^17.0.2",
        "standard-version": "^9.0.0",
        "svg-url-loader": "^7.1.1",
        "ts-jest": "^27.1.3",
        "ts-loader": "^9.2.6",
        "ts-node": "^9.0.0",
        "tsconfig-paths-webpack-plugin": "^3.5.2",
        "typedoc": "^0.19.0",
        "typescript": "^4.5.2",
        "webpack": "^5.64.2",
        "webpack-cli": "^4.9.1"
    },
    "files": [
        "dist/*",
        "!**/*.spec.*",
        "!**/*.json",
        "CHANGELOG.md",
        "LICENSE",
        "README.md"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "prettier": {
        "singleQuote": true
    }
}
